<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="@color/white"
        android:overScrollMode="never"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="@dimen/margin_large">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:paddingRight="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_medium"
                />
            <TextView
                android:id="@+id/personal_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/personal_details"
                android:textSize="@dimen/text_size_xxlarge"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/margin_large"
                />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_bg_with_theme_rounded_corner"
                android:layout_marginTop="@dimen/margin_xxlarge"
                >
                <EditText
                    android:id="@+id/et_first_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/name_hint"
                    android:maxLength="20"
                    android:textSize="@dimen/text_size_normal"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:paddingVertical="@dimen/margin_normal"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="@dimen/margin_medium"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_bg_with_theme_rounded_corner"
                android:layout_marginTop="@dimen/margin_medium"
                >
                <EditText
                    android:id="@+id/et_last_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/last_name_hint"
                    android:maxLength="20"
                    android:textSize="@dimen/text_size_normal"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:paddingVertical="@dimen/margin_normal"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="@dimen/margin_medium"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_medium"
                >
                <LinearLayout
                    android:id="@+id/male_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/white_bg_with_theme_rounded_corner"
                    android:layout_marginRight="@dimen/margin_small"

                    >
                    <EditText
                        android:id="@+id/tv_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/male"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:editable="false"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:paddingVertical="@dimen/margin_normal"
                        android:background="@android:color/transparent"
                        android:paddingHorizontal="@dimen/margin_medium"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/female_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/white_bg_with_theme_rounded_corner"
                    android:layout_marginLeft="@dimen/margin_small"
                    >
                    <EditText
                        android:id="@+id/tv_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/female"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:editable="false"
                        android:focusable="false"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:paddingVertical="@dimen/margin_normal"
                        android:background="@android:color/transparent"
                        android:paddingHorizontal="@dimen/margin_medium"
                        />

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/white_bg_with_theme_rounded_corner"
                android:layout_marginTop="@dimen/margin_medium"
                >
                <EditText
                    android:id="@+id/et_age"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/age_hint"
                    android:maxLength="3"
                    android:inputType="phone"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal"
                    android:singleLine="true"
                    android:paddingVertical="@dimen/margin_normal"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="@dimen/margin_medium"
                    />

                <TextView
                    android:id="@+id/tv_age_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/year"
                    android:textSize="@dimen/text_size_normal"
                    android:layout_marginHorizontal="@dimen/margin_large"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/white_bg_with_theme_rounded_corner"
                android:layout_marginTop="@dimen/margin_medium"
                >
                <EditText
                    android:id="@+id/et_weight"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/weight_hint"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal"
                    android:singleLine="true"
                    android:paddingVertical="@dimen/margin_normal"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="@dimen/margin_medium"
                    />
                <TextView
                    android:id="@+id/tv_weight_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/kg"
                    android:textSize="@dimen/text_size_normal"
                    android:layout_marginHorizontal="@dimen/margin_large"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/white_bg_with_theme_rounded_corner"
                android:layout_marginTop="@dimen/margin_medium"
                >
                <EditText
                    android:id="@+id/et_height"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/height_hint"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/text_size_normal"
                    android:maxLength="6"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:paddingVertical="@dimen/margin_normal"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="@dimen/margin_medium"
                    />
                <TextView
                    android:id="@+id/tv_height_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/feet"
                    android:textSize="@dimen/text_size_normal"
                    android:layout_marginHorizontal="@dimen/margin_large"

                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_medical_condition"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/white_bg_with_theme_rounded_corner"
                android:layout_marginTop="@dimen/margin_medium"
                >
                <EditText
                    android:id="@+id/tv_medical_condition"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:editable="false"
                    android:layout_height="wrap_content"
                    android:hint="@string/medical_condition"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal"
                    android:paddingVertical="@dimen/margin_normal"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="@dimen/margin_medium"
                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:src="@drawable/down_arrow"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/margin_large"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_occupation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/white_bg_with_theme_rounded_corner"
                android:layout_marginTop="@dimen/margin_medium"
                >
                <EditText
                    android:id="@+id/tv_occupation"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:editable="false"
                    android:layout_height="wrap_content"
                    android:hint="@string/occupation_hint"
                    android:textSize="@dimen/text_size_normal"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:paddingVertical="@dimen/margin_normal"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="@dimen/margin_medium"
                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:src="@drawable/down_arrow"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/margin_large"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_goal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/white_bg_with_theme_rounded_corner"
                android:layout_marginTop="@dimen/margin_medium"
                >
                <EditText
                    android:id="@+id/tv_goal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:editable="false"
                    android:layout_height="wrap_content"
                    android:hint="@string/goal"
                    android:textSize="@dimen/text_size_normal"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:paddingVertical="@dimen/margin_normal"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="@dimen/margin_medium"
                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:src="@drawable/down_arrow"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/margin_large"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_state"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/white_bg_with_theme_rounded_corner"
                android:layout_marginTop="@dimen/margin_medium"
                >
                <EditText
                    android:id="@+id/tv_state"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:editable="false"
                    android:layout_height="wrap_content"
                    android:hint="@string/state"
                    android:textSize="@dimen/text_size_normal"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:paddingVertical="@dimen/margin_normal"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="@dimen/margin_medium"
                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:src="@drawable/down_arrow"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/margin_large"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_city"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/white_bg_with_theme_rounded_corner"
                android:layout_marginTop="@dimen/margin_medium"
                >
                <EditText
                    android:id="@+id/tv_city"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:editable="false"
                    android:layout_height="wrap_content"
                    android:hint="@string/city_hint"
                    android:maxLength="40"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal"
                    android:singleLine="true"
                    android:paddingVertical="@dimen/margin_normal"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="@dimen/margin_medium"
                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:src="@drawable/down_arrow"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/margin_large"
                    />
            </LinearLayout>


            <Button
                android:id="@+id/done"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/theme_rounded_corner_bg"
                android:padding="@dimen/margin_medium"
                android:text="@string/next"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/margin_xxlarge"
                android:layout_marginHorizontal="@dimen/margin_large"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"

                />


            <androidx.cardview.widget.CardView
                android:visibility="gone"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xxlarge"
                app:cardUseCompatPadding="true"
                app:cardElevation="8dp"
                app:cardCornerRadius="30dp"


                >
            <Button

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/theme_rounded_corner_bg"
                android:padding="@dimen/margin_medium"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"

                />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</layout>