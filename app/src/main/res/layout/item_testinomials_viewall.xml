<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/theme_rounded_corner_with_white_bg"
    android:layout_marginTop="@dimen/margin_normal"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="@dimen/margin_normal"
        >
        <ImageView
            android:id="@+id/user_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/default_image"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            >
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Vijay Parmar"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tv_posted_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Vijay Parmar"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/black"
                />


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_short_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vijay Parmar"
        android:maxLines="2"
        android:textSize="@dimen/text_size_small"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginHorizontal="@dimen/margin_normal"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vijay Parmar"
        android:maxLines="5"
        android:layout_marginHorizontal="@dimen/margin_normal"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/black"
        android:layout_marginVertical="2dp"
        />
    
    <ImageView
        android:id="@+id/testinomial_image"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:maxHeight="150dp"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:src="@drawable/profile_menu"
        android:layout_marginTop="@dimen/margin_small"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_youtube"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="5dp"
        android:padding="0dp"
        android:elevation="10dp">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        >
    <ImageView
        android:id="@+id/testinomial_video"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/login"
        android:scaleType="fitXY"
        />
    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/play"
        android:layout_centerInParent="true"
        />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>