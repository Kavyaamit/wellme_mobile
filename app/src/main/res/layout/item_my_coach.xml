<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_full"
    android:background="@drawable/payment_expiry_bg"
    android:layout_marginTop="@dimen/margin_normal"
    android:layout_marginHorizontal="@dimen/margin_small">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/payment_transparent_bg"
        android:paddingVertical="@dimen/margin_small"
        android:paddingHorizontal="@dimen/margin_large"
        >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_request_id_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/request_id"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/white"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tv_request_id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_small"
            />
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_small"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <TextView
            android:id="@+id/tv_request_for_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/request_for"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/white"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tv_request_for"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_small"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_request_datetime_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/request_datetime"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/white"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tv_request_datetime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_small"
            />
        <TextView
            android:id="@+id/tv_view_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Profile"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_small"
            />
    </LinearLayout>
    </LinearLayout>

</LinearLayout>