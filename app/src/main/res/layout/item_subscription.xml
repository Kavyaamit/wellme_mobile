<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="3dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_youtube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="5dp"
                android:padding="0dp"
                android:elevation="10dp">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    >
                    <ImageView
                        android:id="@+id/iv_subscription"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/login"
                        android:scaleType="fitXY"
                        />
                    <ImageView
                        android:id="@+id/iv_offer_transparent"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/transparent_bg"
                        android:scaleType="fitXY"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>



        <LinearLayout
            android:layout_alignBottom="@+id/ll_main"
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:textSize="@dimen/text_size_small"
                android:layout_weight="1"
                android:textColor="@color/white"
                />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="ghfghhfgh"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/white"
                        />


                    <TextView
                        android:id="@+id/tv_no_of_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text=""
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/white"
                        />

                </LinearLayout>
                <Button
                    android:id="@+id/btn_view_details"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="View Details"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/white"
                    android:padding="@dimen/margin_small"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_transparent_with_rounded_white_corner"
                    android:layout_marginBottom="@dimen/margin_small"
                    />
            </LinearLayout>




        </LinearLayout>


    </RelativeLayout>

</LinearLayout>