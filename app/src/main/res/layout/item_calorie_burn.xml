<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/margin_normal"
    android:layout_marginTop="@dimen/margin_normal"
    >
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/workout_demo"
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/walking"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/black"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_normal"
            >
            <LinearLayout
                android:id="@+id/ll_time"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/light_pink_rounded_bg"
                >
                <TextView
                    android:id="@+id/tv_amount1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="9sp"
                    android:textColor="#C23BFE"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_unit1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="mins"
                    android:layout_marginTop="-6dp"
                    android:textSize="9sp"
                    android:textColor="#C23BFE"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_distance"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_normal"
                android:background="@drawable/lighter_pink_rounded_bg"
                >
                <TextView
                    android:id="@+id/tv_amount2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="52"
                    android:textSize="9sp"
                    android:textColor="#F59691"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_unit2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="km"
                    android:layout_marginTop="-6dp"
                    android:textSize="9sp"
                    android:textColor="#F59691"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_calorie"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_normal"
                android:gravity="center"

                android:background="@drawable/light_orange_rounded_bg"
                >
                <TextView
                    android:id="@+id/tv_amount3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="220"
                    android:textSize="9sp"
                    android:textColor="#F69D3B"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_unit3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="cal"
                    android:textSize="9sp"
                    android:layout_marginTop="-6dp"
                    android:textColor="#F69D3B"
                    android:gravity="center"
                    />
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:visibility="invisible"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/menu"
            android:layout_gravity="bottom"
            android:tint="@color/light_gray"
            android:layout_marginBottom="@dimen/margin_small"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="@drawable/dashed_line"
            android:layout_marginTop="@dimen/margin_normal"
            />

    </LinearLayout>
</LinearLayout>