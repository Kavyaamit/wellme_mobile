<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/container_home"
        android:background="@color/white"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/ll_home"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
                <View
                    android:id="@+id/view1"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/base_color"
                    />
                <ImageView
                    android:id="@+id/iv_home"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/home_active"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:id="@+id/tv_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Home"
                    android:layout_marginTop="2dp"
                    android:textSize="@dimen/text_size_small1"
                    android:textColor="@color/base_color"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_plan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
                <View
                    android:id="@+id/view2"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey"
                    />
                <ImageView
                    android:id="@+id/iv_plan"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/plan_inactive"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:id="@+id/tv_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Subscription"
                    android:layout_marginTop="2dp"
                    android:textSize="@dimen/text_size_small1"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_offer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
                <View
                    android:id="@+id/view3"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey"
                    />
                <ImageView
                    android:id="@+id/iv_offer"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/offer_inactive"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:id="@+id/tv_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Offer"
                    android:layout_marginTop="2dp"
                    android:textSize="@dimen/text_size_small1"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_coach"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
                <View
                    android:id="@+id/view4"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey"
                    />
                <ImageView
                    android:id="@+id/iv_coach"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/coach_inactive"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:id="@+id/tv_coach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="My Coach"
                    android:layout_marginTop="2dp"
                    android:textSize="@dimen/text_size_small1"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.bottomnavigation.BottomNavigationView>
</LinearLayout>