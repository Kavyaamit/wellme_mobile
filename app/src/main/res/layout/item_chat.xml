<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/from_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin_small"
        android:background="@color/transparent"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/leftchat"
            android:layout_marginRight="@dimen/margin_small"
            >
            <TextView
                android:id="@+id/tv_msg_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:inputType="textMultiLine"
                android:text=""
                android:gravity="left"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:paddingRight="5dp"
                android:textSize="13sp"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/iv_image_from"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="start"
                android:src="@drawable/chat_gallery"
                android:visibility="gone"
                android:background="@drawable/bg_transparent_with_rounded_corner"
                />

            <TextView
                android:id="@+id/from_time_ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:text="20:20"
                android:gravity="right"
                android:visibility="visible"
                android:textColor="@color/black"
                android:layout_gravity="right"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="4dp"
                android:layout_marginRight="5dp"
                android:textSize="8sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/to_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin_small"
        android:background="@color/transparent"
        android:gravity="right"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="5dp"
            android:background="@drawable/rightchat"
            android:layout_marginLeft="@dimen/padding_medium"
            >

            <TextView
                android:id="@+id/tv_msg_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:inputType="textMultiLine"
                android:text="  "
                android:gravity="left"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:paddingRight="5dp"
                android:textSize="13sp"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/iv_image_me"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="start"
                android:src="@drawable/chat_gallery"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/me_time_ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:text="20:20"
                android:gravity="right"
                android:visibility="visible"
                android:textColor="@color/black"
                android:layout_gravity="right"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="4dp"
                android:layout_marginRight="5dp"
                android:textSize="8sp" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>