                android:layout_marginTop="@dimen/margin_normal"
                >
                <TextView
                    android:id="@+id/tv_calf"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/calf1"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/margin_normal"
                    />
                <TextView
                    android:id="@+id/tv_calf_val"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/not_mentioned"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/margin_normal"
                    />
            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_description"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@color/grey"
                android:gravity="center|left"
                android:layout_marginTop="@dimen/margin_medium"
                >
                <TextView
                    android:id="@+id/tv_bio_header"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/margin_normal"
                    />
                <ImageView
                    android:visibility="gone"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/next"
                    android:layout_marginHorizontal="@dimen/margin_normal"
                    android:tint="@color/black"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indore, India"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/black"
                android:layout_marginHorizontal="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginBottom="@dimen/margin_large"
                />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

        <LinearLayout
            android:id="@+id/ll_save"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            >
            <TextView
                android:id="@+id/tv_request_for_booking"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/request_for_booking"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:gravity="center"
                />

        </LinearLayout>
    </LinearLayout>
</layout>