                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/margin_normal"
                    />
                <TextView
                    android:id="@+id/tv_arm_left_val"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/not_mentioned"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/margin_normal"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_arm_right"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_normal"
                >
                <TextView
                    android:id="@+id/tv_arm_right"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/arm_right1"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/margin_normal"
                    />
                <TextView
                    android:id="@+id/tv_arm_right_val"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/not_mentioned"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/margin_normal"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_waist"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_normal"
                >
                <TextView
                    android:id="@+id/tv_waist"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/waist1"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/margin_normal"
                    />
                <TextView
                    android:id="@+id/tv_waist_val"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/not_mentioned"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/margin_normal"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_thigh"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_normal"
                >
                <TextView
                    android:id="@+id/tv_thigh"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/thigh1"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/margin_normal"
                    />
                <TextView
                    android:id="@+id/tv_thigh_val"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/not_mentioned"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/margin_normal"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_chest"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_normal"
                >
                <TextView
                    android:id="@+id/tv_chest"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/chest1"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/margin_normal"
                    />
                <TextView
                    android:id="@+id/tv_chest_val"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/not_mentioned"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/margin_normal"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_hips"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_normal"
                >
                <TextView
                    android:id="@+id/tv_hips"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/hips1"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/margin_normal"
                    />
                <TextView
                    android:id="@+id/tv_hips_val"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/not_mentioned"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/margin_normal"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_calf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
