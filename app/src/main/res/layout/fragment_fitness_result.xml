<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:background="@color/white"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_normal"
            >

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:padding="@dimen/margin_normal"
                />
            <TextView
                android:id="@+id/text"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/to_lose_certain_amount_text"
                android:textSize="@dimen/text_size_xxlarge"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/margin_large"
                android:paddingHorizontal="@dimen/margin_normal"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_large"
            >

            <RelativeLayout
                android:id="@+id/track_calorie_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xxlarge"
                >
                <LinearLayout
                    android:id="@+id/image_layout"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/light_yellow_rounded_corner_bg"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="@dimen/margin_medium"
                        android:src="@drawable/burn_calorie"
                        android:background="@drawable/white_rounded_bg"
                        />

                </LinearLayout>


                        <TextView
                            android:id="@+id/tv_take_calorie"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/to_lose_certain_amount_text_one"
                            android:textSize="@dimen/text_size_medium"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:layout_toRightOf="@id/image_layout"

                            />



                <View
                    android:layout_width="fill_parent"
                    android:layout_height="8dp"
                    android:background="@drawable/dashed_line"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/image_layout"
                    android:layout_toRightOf="@id/image_layout"
                    android:layout_marginLeft="@dimen/margin_small"
                    />


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/diet_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                >
                <LinearLayout
                    android:id="@+id/image_layout1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/lighter_blue_rounded_corner_bg"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="@dimen/margin_medium"
                        android:src="@drawable/exercise"
                        android:background="@drawable/white_rounded_bg"
                        />

                </LinearLayout>
                    <TextView
                        android:id="@+id/tv_burn_calorie"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/to_lose_certain_amount_text_two"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_toRightOf="@id/image_layout1"

                        />



                <View
                    android:layout_width="fill_parent"
                    android:layout_height="8dp"
                    android:background="@drawable/dashed_line"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/image_layout1"
                    android:layout_toRightOf="@id/image_layout1"
                    android:layout_marginLeft="@dimen/margin_small"
                    />


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/coached_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                >
                <LinearLayout
                    android:id="@+id/image_layout2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/light_red_rounded_corner_bg"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="@dimen/margin_medium"
                        android:src="@drawable/step"
                        android:background="@drawable/white_rounded_bg"
                        />

                </LinearLayout>

                    <TextView
                        android:id="@+id/tv_take_step"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/to_lose_certain_amount_text_three"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_toRightOf="@id/image_layout2"
                        />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="8dp"
                    android:background="@drawable/dashed_line"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/image_layout2"
                    android:layout_toRightOf="@id/image_layout2"
                    android:layout_marginLeft="@dimen/margin_small"
                    />


            </RelativeLayout>



            <Button
                android:id="@+id/lets_get_started"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/theme_rounded_corner_bg"
                android:padding="@dimen/margin_medium"
                android:text="@string/lets_get_started"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginHorizontal="@dimen/margin_xxxlarge"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"

                />



            <androidx.cardview.widget.CardView
                android:visibility="gone"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_xxxlarge"
                android:layout_marginHorizontal="@dimen/margin_normal"


                app:cardUseCompatPadding="true"
                app:cardElevation="8dp"
                app:cardCornerRadius="30dp"


                >

            <Button

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/theme_rounded_corner_bg"
                android:padding="@dimen/margin_normal"
                android:text="@string/lets_get_started"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"

                />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>