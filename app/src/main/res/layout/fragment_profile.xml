<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="@dimen/margin_large"
            android:paddingHorizontal="@dimen/margin_medium"
            android:background="@color/white">
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:padding="@dimen/margin_normal"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_large"
                >

                <TextView
                    android:id="@+id/header"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/profile"
                    android:textSize="@dimen/text_size_xxlarge"
                    android:textColor="@color/black"

                    />

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/tv_go_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/go_pro"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/white"
                    android:padding="@dimen/margin_normal"
                    android:background="@drawable/green_rounded_corner_bg1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginHorizontal="@dimen/margin_normal"
                >
                <com.wellme.utils.CirleImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/default_image"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/margin_large"
                        android:layout_marginLeft="@dimen/margin_normal"
                        />
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Indore, India"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/light_gray"
                        android:layout_marginLeft="@dimen/margin_normal"
                        />

                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_edit"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/edit"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:tint="@color/light_gray"
                    />


            </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_xxxxlarge"
            >

            <LinearLayout
                android:id="@+id/ll_coach"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/margin_medium"
                >

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/red_rounded_corner_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/support" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/margin_normal"
                    >
                    <TextView
                        android:id="@+id/tv_coach"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pick_your_coach"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/black"

                        />
                    <TextView
                        android:id="@+id/tv_coach_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stay_connected_with_fitness"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/light_gray"

                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/next"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <View
                android:id="@+id/v1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginVertical="@dimen/margin_normal"

                />

            <LinearLayout
                android:id="@+id/ll_bio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                >
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/red_rounded_corner_bg"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/bio"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/margin_normal"
                    >
                    <TextView
                        android:id="@+id/tv_bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bio"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/black"

                        />
                    <TextView
                        android:id="@+id/tv_bio_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bio_detail"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/light_gray"

                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/next"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginVertical="@dimen/margin_normal"

                />

            <LinearLayout
                android:id="@+id/ll_basic_information"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                >
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/orange_rounded_corner_bg"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/info"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/margin_normal"
                    >
                    <TextView
                        android:id="@+id/tv_basic_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/basic_information"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/black"

                        />
                    <TextView
                        android:id="@+id/tv_basic_information_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/basic_information_detail"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/light_gray"

                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/next"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginVertical="@dimen/margin_normal"

                />
            <LinearLayout
                android:id="@+id/ll_change_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/margin_medium"
                >

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/red_rounded_corner_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/support" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/margin_normal"
                    >
                    <TextView
                        android:id="@+id/tv_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/change_password"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/black"

                        />
                    <TextView
                        android:id="@+id/tv_password_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/change_password_detail"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/light_gray"

                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/next"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <View
                android:id="@+id/change_password_view"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginVertical="@dimen/margin_normal"

                />

            <LinearLayout
                android:id="@+id/ll_body_measurement"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                >
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/sky_blue_rounded_corner_bg"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/muscle_gain"
                        android:tint="@color/white"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/margin_normal"
                    >
                    <TextView
                        android:id="@+id/tv_body_measurement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/body_measurement"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/black"

                        />
                    <TextView
                        android:id="@+id/tv_body_measurement_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/body_measurement_detail"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/light_gray"

                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/next"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginVertical="@dimen/margin_normal"

                />

            <LinearLayout
                android:id="@+id/ll_medical_condition"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                >
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/orange_rounded_corner_bg"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/muscle_gain"
                        android:tint="@color/white"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/margin_normal"
                    >
                    <TextView
                        android:id="@+id/tv_medical_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/medical_condition"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/black"

                        />
                    <TextView
                        android:id="@+id/tv_ll_medical_condition_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/medical_discription"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/light_gray"

                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/next"
                    android:layout_gravity="center"
                    />
            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginVertical="@dimen/margin_normal"

                />


            <LinearLayout
                android:id="@+id/ll_food_preference"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginHorizontal="@dimen/margin_medium"
                >
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/sky_blue_rounded_corner_bg"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/restaurant"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/margin_normal"
                    >
                    <TextView
                        android:id="@+id/tv_food_preference"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/food_preferences"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/black"

                        />
                    <TextView
                        android:id="@+id/tv_food_preference_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/food_preference_detail"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/light_gray"

                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/next"
                    android:layout_gravity="center"
                    />
            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginVertical="@dimen/margin_normal"

                />
            <LinearLayout
                android:id="@+id/ll_stay_connected"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                >
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/red_rounded_corner_bg"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/payment"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_payment_details"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/margin_normal"
                    >
                    <TextView
                        android:id="@+id/tv_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/payment"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/black"

                        />
                    <TextView
                        android:id="@+id/tv_payment_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/payment_details"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/light_gray"

                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/next"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginVertical="@dimen/margin_normal"

                />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>
