<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:background="@color/white"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_large"
            >
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:padding="@dimen/margin_normal"
                />
            <TextView
                android:id="@+id/header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/fitness_level"
                android:textSize="@dimen/text_size_xlarge"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/margin_small"
                />

            <RelativeLayout
                android:id="@+id/no_exercise_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xxlarge"
                >
                <LinearLayout
                    android:id="@+id/image_layout"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/light_yellow_rounded_corner_bg"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="@dimen/margin_medium"
                        android:src="@drawable/no_exercise"
                        android:background="@drawable/white_rounded_bg"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/image_layout"
                    >
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginTop="@dimen/margin_normal"
                        >

                        <TextView
                            android:id="@+id/tv_no_exercise"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/no_exercise"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/black"

                            />

                        <ImageView
                            android:id="@+id/cb_no_exercise"
                            android:visibility="gone"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/check"
                            android:layout_gravity="center"
                            />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/no_exercise_detail"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginTop="3dp"
                        android:text="@string/intro"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/light_gray"
                        />


                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="8dp"
                    android:background="@drawable/dashed_line"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/image_layout"
                    android:layout_toRightOf="@id/image_layout"
                    android:layout_marginLeft="@dimen/margin_small"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/twice_a_week_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                >
                <LinearLayout
                    android:id="@+id/image_layout1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/lighter_blue_rounded_corner_bg"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="@dimen/margin_medium"
                        android:src="@drawable/twice_week_calendar"
                        android:background="@drawable/white_rounded_bg"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/image_layout1"
                    >
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginTop="@dimen/margin_normal"
                        >

                        <TextView
                            android:id="@+id/tv_twice_week"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/twice_a_week"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/black"

                            />
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/cb_twice_a_week"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/check"
                            android:layout_gravity="center"
                            android:background="@drawable/white_rounded_bg"
                            />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/twice_week_detail"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/intro"
                        android:textSize="@dimen/text_size_small"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/light_gray"
                        />




                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="8dp"
                    android:background="@drawable/dashed_line"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/image_layout1"
                    android:layout_toRightOf="@id/image_layout1"
                    android:layout_marginLeft="@dimen/margin_small"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/once_a_week_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xxlarge"
                >
                <LinearLayout
                    android:id="@+id/image_layout2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/light_red_rounded_corner_bg"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="@dimen/margin_medium"
                        android:src="@drawable/single_week_calendar"
                        android:background="@drawable/white_rounded_bg"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/image_layout2"
                    >
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginTop="@dimen/margin_normal"
                        >

                        <TextView
                            android:id="@+id/once_week"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/once_a_week"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/black"

                            />

                        <ImageView
                            android:id="@+id/cb_once_a_week"
                            android:visibility="gone"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/check"
                            android:layout_gravity="center"
                            />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/once_week_detail"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/intro"
                        android:textSize="@dimen/text_size_small"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/light_gray"
                        />

                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="8dp"
                    android:background="@drawable/dashed_line"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/image_layout2"
                    android:layout_toRightOf="@id/image_layout2"
                    android:layout_marginLeft="@dimen/margin_small"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sometime_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xxlarge"
                >
                <LinearLayout
                    android:id="@+id/image_layout3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/light_branjil_rounded_corner_bg"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="@dimen/margin_medium"
                        android:src="@drawable/sometimes"
                        android:background="@drawable/white_rounded_bg"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/image_layout3"
                    >
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginTop="@dimen/margin_normal"
                        >

                        <TextView
                            android:id="@+id/tv_sometimes"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/sometime"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/black"

                            />

                        <ImageView
                            android:id="@+id/cb_sometimes"
                            android:visibility="gone"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/check"
                            android:layout_gravity="center"
                            />




                    </LinearLayout>

                    <TextView
                        android:id="@+id/sometime_detail"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/intro"
                        android:textSize="@dimen/text_size_small"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/light_gray"
                        />



                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="8dp"
                    android:background="@drawable/dashed_line"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/image_layout3"
                    android:layout_toRightOf="@id/image_layout3"
                    android:layout_marginLeft="@dimen/margin_small"
                    />


            </RelativeLayout>



            <Button
                android:id="@+id/next"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/theme_rounded_corner_bg"
                android:padding="@dimen/margin_medium"
                android:text="@string/next"
                android:textAllCaps="false"
                android:layout_marginVertical="@dimen/margin_xxxlarge"
                android:layout_marginHorizontal="@dimen/margin_large"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"

                />



            <androidx.cardview.widget.CardView
                android:visibility="gone"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_xxxlarge"
                android:layout_marginHorizontal="@dimen/margin_normal"
                app:cardUseCompatPadding="true"
                app:cardElevation="8dp"
                app:cardCornerRadius="30dp"
                >
            <Button

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/theme_rounded_corner_bg"
                android:padding="@dimen/margin_normal"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"

                />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</layout>