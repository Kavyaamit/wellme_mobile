                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0"
                            android:orientation="horizontal"
                            android:background="#45d7ed"
                            android:gravity="bottom"
                            >
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
