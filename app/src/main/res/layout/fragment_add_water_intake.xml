<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:scrollbars="none"
        android:overScrollMode="never"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_large"
            >
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:paddingRight="@dimen/margin_normal"
                />
            <TextView
                android:id="@+id/header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/water_intake"
                android:textSize="@dimen/text_size_xlarge"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/margin_large"
                />
            <TextView
                android:id="@+id/tv_water_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 of 9 Glasses"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
                android:layout_gravity="center|left"
                android:layout_marginTop="@dimen/margin_medium"
                />
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:weightSum="1"
                android:layout_height="15dp"
                android:layout_marginTop="@dimen/margin_normal"
                android:background="@drawable/grey_rounded_bg"
                >
             <LinearLayout
                 android:id="@+id/ll_fill"
                 android:layout_width="0dp"
                 android:layout_weight="0"
                 android:layout_height="20dp"
                 android:background="@drawable/blue_rounded_bg"
                 android:orientation="vertical"
                 />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_xxxlarge"
                >
                <ImageView
                    android:id="@+id/iv_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gray_minus"
                    android:layout_gravity="center"
                    />

                <ImageView
                    android:id="@+id/iv_glass"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/empty_glass"
                    android:layout_marginHorizontal="@dimen/margin_xxlarge"
                    />

                <ImageView
                    android:id="@+id/iv_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/blue_plus"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_water_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Glass (250 ml)"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_medium"
                />

            <TextView
                android:id="@+id/tv_daily_water_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Water Intake"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
                android:layout_gravity="center|left"
                android:layout_marginTop="@dimen/margin_xxxxlarge"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginHorizontal="@dimen/margin_medium"
                >
