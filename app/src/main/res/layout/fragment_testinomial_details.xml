<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"

        >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_normal"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:padding="@dimen/margin_normal"
            />
        <TextView
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/testimonials"
            android:textSize="@dimen/text_size_xxlarge"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/margin_normal"
            android:paddingHorizontal="@dimen/margin_normal"
            />
    </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

              <androidx.cardview.widget.CardView
                  android:layout_above="@+id/cv_send"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                  android:layout_weight="1"

                        app:cardCornerRadius="@dimen/margin_normal"
                        app:cardElevation="@dimen/margin_small"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="0.0px"
                        android:clipToPadding="false"
                        android:clipChildren="false"
                        app:cardPreventCornerOverlap="true"
                  android:paddingVertical="@dimen/margin_normal"
                        android:layout_marginVertical="@dimen/margin_normal"
                        android:layout_marginHorizontal="@dimen/margin_small"
                        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scrollIndicators="none"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >


                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/margin_normal"
                                android:padding="@dimen/margin_large"
                                >
                                <ImageView
                                    android:id="@+id/user_image"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:src="@drawable/default_image"
                                    />
                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/margin_normal"
                                    android:layout_marginRight="@dimen/margin_normal"
                                    >
                                    <TextView
                                        android:id="@+id/tv_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="Vijay Parmar"
                                        android:textSize="@dimen/text_size_normal"
                                        android:textColor="@color/black"
                                        />
                                    <TextView
                                        android:id="@+id/tv_posted_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="Vijay Parmar"
                                        android:textSize="@dimen/text_size_small"
                                        android:textColor="@color/black"
                                        />


                                </LinearLayout>
                            </LinearLayout>



                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_youtube"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="10dp"
                                android:padding="0dp"
                                android:elevation="10dp"
                                android:layout_marginHorizontal="@dimen/margin_large">


                                <ImageView
                                    android:id="@+id/testinomial_image"
                                    android:layout_width="fill_parent"
                                    android:layout_height="150dp"
                                    android:maxHeight="150dp"
                                    android:scaleType="fitXY"
                                    android:layout_gravity="center"
                                    android:src="@drawable/profile_menu"

                                    />

                                <RelativeLayout
                                    android:id="@+id/rl_img_video"
                                    android:layout_width="fill_parent"
                                    android:layout_height="150dp"
                                    >

                                    <ImageView
                                        android:id="@+id/testinomial_video"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:src="@drawable/login"
                                        android:scaleType="fitXY"
                                        />
                                    <ImageView
                                        android:id="@+id/iv_play"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/play_blue"
                                        android:layout_centerInParent="true"
                                        />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>


                            <TextView
                                android:id="@+id/tv_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Like"
                                android:textSize="@dimen/text_size_normal"
                                android:layout_marginHorizontal="@dimen/margin_normal"
                                android:layout_marginTop="@dimen/margin_normal"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_bold"
                                />

                            <TextView
                                android:id="@+id/tv_discription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Like"
                                android:textSize="@dimen/text_size_normal"
                                android:textStyle="normal"
                                android:maxLines="3"
                                android:layout_marginHorizontal="@dimen/margin_normal"
                                android:textColor="@color/black"
                                android:ellipsize="end"

                                />

                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginTop="@dimen/margin_normal"
                                android:layout_marginBottom="@dimen/margin_small"
                                android:layout_marginHorizontal="@dimen/margin_small"
                                android:id="@+id/rv_chatlist">

                            </androidx.recyclerview.widget.RecyclerView>






                        </LinearLayout>











                </LinearLayout>
            </ScrollView>

