    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardCornerRadius="@dimen/margin_normal"
        app:cardElevation="@dimen/margin_small"

    android:divider="@android:color/transparent"
    android:dividerHeight="0.0px"
    android:clipToPadding="false"
    android:clipChildren="false"
    app:cardPreventCornerOverlap="true"
    android:layout_marginVertical="@dimen/margin_normal"
    android:layout_marginHorizontal="@dimen/margin_small"
    >
    <LinearLayout
        android:id="@+id/ll_mainview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_normal"
            >
            <ImageView
                android:id="@+id/user_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/default_image"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                >
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Vijay Parmar"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_posted_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Vijay Parmar"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/black"
                    />


            </LinearLayout>
        </LinearLayout>



                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_youtube"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:padding="0dp"
                    android:elevation="10dp"
                    android:layout_marginHorizontal="@dimen/margin_normal">


                    <ImageView
                        android:id="@+id/testinomial_image"
                        android:layout_width="fill_parent"
                        android:layout_height="150dp"
                        android:maxHeight="150dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@drawable/profile_menu"

                        />

                    <RelativeLayout
                        android:id="@+id/rl_img_video"
                        android:layout_width="fill_parent"
                        android:layout_height="150dp"
                        >

                        <ImageView
                            android:id="@+id/testinomial_video"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:src="@drawable/login"
                            android:scaleType="fitXY"
                            />
                        <ImageView
                            android:id="@+id/iv_play"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/play_blue"
                            android:layout_centerInParent="true"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_normal"
            android:paddingVertical="@dimen/margin_normal"
            android:layout_gravity="center"

            android:layout_marginStart="@dimen/margin_normal">



            <ImageView
                android:id="@+id/iv_like_blue"
                android:layout_width="@dimen/margin_large"
                android:layout_height="@dimen/margin_large"
                android:src="@drawable/like"
                android:layout_gravity="center"
                />


            <ImageView
                android:id="@+id/iv_comment"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_width="@dimen/margin_large"
                android:layout_height="@dimen/margin_large"
                android:src="@drawable/comment"
                android:layout_gravity="center"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >


            <LinearLayout
                android:id="@+id/ll_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_small"
                android:layout_marginHorizontal="@dimen/margin_normal">


                <TextView
                    android:id="@+id/tv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Like"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black"

                    />

            </LinearLayout>






        </LinearLayout>













    </LinearLayout>










    </androidx.cardview.widget.CardView>





