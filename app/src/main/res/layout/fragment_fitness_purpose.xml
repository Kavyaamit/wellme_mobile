<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

       <ScrollView
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_large"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_normal"
                android:visibility="gone"

                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:src="@drawable/logo"
                    />
                <TextView
                    android:id="@+id/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="@dimen/text_size_xxxlarge"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="@dimen/margin_normal"
                />

            </LinearLayout>
            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bring_you_to_wellme"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_xxxxlarge"
                android:textColor="@color/black"
                android:layout_margin="@dimen/margin_normal"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_xxlarge"
                android:gravity="center"
                >
                <LinearLayout
                    android:id="@+id/weight_loss_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/light_red_rounded_corner_bg"
                    >
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/cb_weight_loss"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="end"
                        android:src="@drawable/check"
                        android:layout_marginTop="-15dp"
                        android:layout_marginRight="@dimen/margin_normal"
                        />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="@dimen/margin_medium"
                        android:src="@drawable/weight_loss"

                        android:background="@drawable/white_rounded_bg"
                        />
                    <TextView
                        android:id="@+id/tv_weight_loss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weight_loss"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/margin_small"

                        android:layout_marginHorizontal="@dimen/margin_normal"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/increased_fitness_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:background="@drawable/light_green_rounded_corner_bg"
                    >
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/cb_increased_fitness"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="end"
                        android:src="@drawable/check"
                        android:layout_marginTop="-15dp"
                        android:layout_marginRight="@dimen/margin_normal"
                        />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="@dimen/margin_medium"
                        android:src="@drawable/increased_fitness"
                        android:background="@drawable/white_rounded_bg"
                        />
                    <TextView
                        android:id="@+id/tv_increased_fitness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/increased_fitness"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginHorizontal="@dimen/margin_normal"
                        />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_normal"
                >
                <LinearLayout
                    android:id="@+id/medical_condition_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/light_blue_rounded_corner_bg"
                    >
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/cb_medical_condition"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="end"
                        android:src="@drawable/check"
                        android:layout_marginTop="-5dp"
                        android:layout_marginRight="@dimen/margin_normal"
                        />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="@dimen/margin_medium"
                        android:src="@drawable/medical_condition"
                        android:background="@drawable/white_rounded_bg"
                        />
                    <TextView
                        android:id="@+id/tv_medical_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/improve_medical_condition"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/margin_small"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="@dimen/margin_normal"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/muscle_gain_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:background="@drawable/light_branjil_rounded_corner_bg"
                    >
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/cb_muscle_gain"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="end"
                        android:src="@drawable/check"
                        android:layout_marginTop="-15dp"
                        android:layout_marginRight="@dimen/margin_normal"
                        />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="@dimen/margin_medium"
                        android:src="@drawable/muscle_gain"
                        android:background="@drawable/white_rounded_bg"
                        />
                    <TextView
                        android:id="@+id/tv_muscle_gain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/muscle_gain"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginHorizontal="@dimen/margin_normal"
                        />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_normal"
                android:gravity="center"
                >
                <LinearLayout
                    android:id="@+id/weight_gain_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/lighter_blue_rounded_corner_bg"
                    >
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/cb_weight_gain"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="end"
                        android:src="@drawable/check"
                        android:layout_marginTop="-15dp"
                        android:layout_marginRight="@dimen/margin_normal"
                        />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="@dimen/margin_medium"
                        android:src="@drawable/weight_gain"
                        android:background="@drawable/white_rounded_bg"
                        />
                    <TextView
                        android:id="@+id/tv_weight_gain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weight_gain"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginHorizontal="@dimen/margin_normal"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/overall_wellness_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:background="@drawable/light_yellow_rounded_corner_bg"
                    >
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/cb_overall_wellness"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="end"
                        android:src="@drawable/check"
                        android:layout_marginTop="-15dp"
                        android:layout_marginRight="@dimen/margin_normal"
                        />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="@dimen/margin_medium"
                        android:src="@drawable/overall_wellness"
                        android:background="@drawable/white_rounded_bg"
                        />
                    <TextView
                        android:id="@+id/tv_overall_wellness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/overall_wellness"
                        android:textSize="@dimen/text_size_normal"
                        android:layout_marginTop="@dimen/margin_small"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="@dimen/margin_normal"
                        />

                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_large"


                app:cardUseCompatPadding="true"
                app:cardElevation="8dp"
                app:cardCornerRadius="30dp"


                >
            <Button
                android:id="@+id/done"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/theme_rounded_corner_bg"
                android:padding="@dimen/margin_medium"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"

                />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
       </ScrollView>
</layout>