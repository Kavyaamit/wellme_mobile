<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:background="@color/white"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_large"
            >
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                />
            <TextView
                android:id="@+id/text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/like_to_do_next_text"
                android:textSize="@dimen/text_size_xxlarge"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/margin_xxlarge"
                />

            <RelativeLayout
                android:id="@+id/track_calorie_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xxlarge"
                >
                <LinearLayout
                    android:id="@+id/image_layout"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/light_yellow_rounded_corner_bg"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="@dimen/margin_normal"
                        android:src="@drawable/calorie"
                        android:background="@drawable/white_rounded_bg"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_toRightOf="@id/image_layout"
                    >

                        <TextView
                            android:id="@+id/tv_track_calorie"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/track_calorie"
                            android:textSize="@dimen/text_size_medium"
                            android:layout_gravity="center"
                            android:textColor="@color/black"

                            />




                    <ImageView
                        android:id="@+id/cb_track_calorie"
                        android:visibility="invisible"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/check"
                        android:layout_marginHorizontal="@dimen/margin_small"
                        android:layout_gravity="center"
                        />


                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="8dp"
                    android:background="@drawable/dashed_line"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/image_layout"
                    android:layout_toRightOf="@id/image_layout"
                    android:layout_marginLeft="@dimen/margin_small"
                    />


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/diet_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                >
                <LinearLayout
                    android:id="@+id/image_layout1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/lighter_blue_rounded_corner_bg"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="@dimen/margin_normal"
                        android:src="@drawable/nutrition"
                        android:background="@drawable/white_rounded_bg"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_toRightOf="@id/image_layout1"
                    >

                    <TextView
                        android:id="@+id/tv_diet"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/get_diet_and_workout_plan"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_gravity="center"
                        android:textColor="@color/black"

                        />




                    <ImageView
                        android:id="@+id/cb_get_diet"
                        android:visibility="invisible"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/check"
                        android:layout_marginHorizontal="@dimen/margin_small"
                        android:layout_gravity="center"
                        />


                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="8dp"
                    android:background="@drawable/dashed_line"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/image_layout1"
                    android:layout_toRightOf="@id/image_layout1"
                    android:layout_marginLeft="@dimen/margin_small"
                    />


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/coached_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                >
                <LinearLayout
                    android:id="@+id/image_layout2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/light_red_rounded_corner_bg"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="@dimen/margin_normal"
                        android:src="@drawable/coach"
                        android:background="@drawable/white_rounded_bg"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_toRightOf="@id/image_layout2"
                    >

                    <TextView
                        android:id="@+id/tv_coached"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/get_coached"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_gravity="center"
                        android:textColor="@color/black"

                        />




                    <ImageView
                        android:id="@+id/cb_get_coached"
                        android:visibility="invisible"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/check"
                        android:layout_marginHorizontal="@dimen/margin_small"
                        android:layout_gravity="center"
                        />


                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="8dp"
                    android:background="@drawable/dashed_line"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/image_layout2"
                    android:layout_toRightOf="@id/image_layout2"
                    android:layout_marginLeft="@dimen/margin_small"
                    />


            </RelativeLayout>


            <Button
                android:id="@+id/next"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/theme_rounded_corner_bg"
                android:padding="@dimen/margin_medium"
                android:text="@string/next"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/margin_xxlarge"
                android:layout_marginHorizontal="@dimen/margin_large"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"

                />




            <androidx.cardview.widget.CardView
                android:visibility="gone"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_xxlarge"


                app:cardUseCompatPadding="true"
                app:cardElevation="8dp"
                app:cardCornerRadius="30dp"


                >
            <Button

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/theme_rounded_corner_bg"
                android:padding="@dimen/margin_normal"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"

                />

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
</layout>