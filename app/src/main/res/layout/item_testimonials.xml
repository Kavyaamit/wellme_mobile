<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    android:padding="0dp"
    app:cardBackgroundColor="@color/testimonials_color"
    android:elevation="10dp">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    >

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_testimonial"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:src="@drawable/signup_back"
            android:scaleType="fitXY"
            />

    <RelativeLayout
        android:id="@+id/rl_youtube"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        >
        <ImageView
            android:id="@+id/testinomial_video"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/login"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/play"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
        </LinearLayout>
     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_marginVertical="@dimen/margin_normal"
         android:layout_marginRight="@dimen/margin_normal"
         >

         <TextView
             android:id="@+id/tv_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_gravity="center|left"
             android:layout_marginLeft="@dimen/margin_normal"
             android:layout_marginRight="@dimen/margin_normal"
             android:text="AMAN JOSHAsfsfgdfg dfg"
             android:textColor="@color/black"
             android:textSize="11sp"

             />
         <View
             android:layout_width="fill_parent"
             android:layout_height="1dp"
             android:background="@color/light_gray"
             android:layout_marginLeft="@dimen/margin_normal"
             android:layout_marginTop="@dimen/margin_small"
             />
         <TextView
             android:id="@+id/tv_title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="AMAN JOSHAsfs"
             android:maxLines="2"
             android:textSize="11sp"
             android:layout_marginTop="@dimen/margin_small"
             android:layout_marginRight="@dimen/margin_normal"
             android:layout_marginLeft="@dimen/margin_normal"
             android:layout_gravity="center|left"
             android:textColor="@color/black"

             />

         <TextView
             android:id="@+id/tv_description"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="AMAN JOSHAsfs"
             android:maxLines="5"
             android:textSize="10sp"
             android:layout_marginRight="@dimen/margin_normal"
             android:layout_marginLeft="@dimen/margin_normal"
             android:layout_gravity="center|left"
             android:textColor="@color/black"

             />



     </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>