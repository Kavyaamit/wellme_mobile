<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_full_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:padding="0dp"
        android:elevation="10dp">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_image"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="5dp"
                    android:padding="0dp"
                    android:elevation="10dp">
        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            >
            <ImageView
                android:id="@+id/iv_subscription"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/login"
                android:scaleType="fitXY"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/margin_small"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_small">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/type_of_plan"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/black"
                    />


                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="fgh"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/black"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_plan_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="fgh"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/black"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:id="@+id/tv_subscription_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="fgh"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/black"
                android:layout_marginTop="2dp"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_purchased_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="fgh"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/black"
                android:layout_marginTop="2dp"
                />
            <Button
                android:id="@+id/btn_repeat_plan"
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:text="@string/repeat_plan"
                android:textSize="@dimen/text_size_small_11"
                android:textColor="@color/base_color"
                android:textAllCaps="false"
                android:layout_gravity="right"
                android:background="@drawable/bg_white_with_rounded_theme_corner"

                />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>